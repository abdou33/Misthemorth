#:kivy 1.0

MDScreen:
    name: 'main'

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "ui/image.png"
            size_hint: None, None
            width: "500dp"
            height: "700dp"

        MDLabel:
            padding: "100dp"
            text: 'Misthemorth'
            size_hint_y: None
            width: root.width
            pos_hint: {'top': 0.98}
            markup: True
            valign: 'top'
            halign: 'center'
            color: 0, 0, 0, 1
            font_size: 30
            font_name: 'ARIAL'

        # MDLabel:
        #     spacing: '10dp'

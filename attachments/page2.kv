MDScreen:
    name: "page2"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        BoxLayout:
            orientation: 'horizontal'

            MDIconButton:
                icon: "arrow-left"
                pos_hint: {"center_y": 0.95, "center_x": 0.85}
                user_font_size: "30sp"
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = "main"

            MDLabel:
                text: "Your Text Here"
                halign: 'center'
                font_size: "20sp"
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": 0.95, "center_x": 0.85}

        BoxLayout:
            orientation: 'horizontal'
            spacing: "10dp"
            padding: "10dp"

            MDTextFieldRect:
                hint_text: "Enter text"
                size_hint: 0.1, 0.08
                pos_hint: {'center_x': 0.01, 'center_y':0.1}
                user_font_size: "16sp"
                multiline: False

            MDRaisedButton:
                height: "40dp"
                pos_hint: {'center_x': 0.01, 'center_y':0.1}
                text: 'Button 4'
                font_size: '14dp'
                font_name: 'Roboto1'
                md_bg_color: 0.859, 0.051, 0.106
                text_color: 1, 1, 1, 1
                on_release: app.button_pressed()

                canvas.before:
                    Color:
                        rgba: 255, 215, 0, 1  # Border color
                    Line:
                        width: 2
                    RoundedRectangle:
                        pos: self.x, self.y
                        size: self.width, self.height
                        radius: [4, 4, 4, 4]
